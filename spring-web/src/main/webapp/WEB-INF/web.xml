<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>spring-web-template</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>WEB-INF/lib/*.jar!/**/applicationContext-*.xml,classpath:spring/applicationContext-*.xml</param-value>
	</context-param>

	<filter>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<filter-class>net.frank.framework.web.filter.SetCharacterEncodingFilter</filter-class>
	</filter>
	<filter>
		<filter-name>securityFilter</filter-name>
		<filter-class>net.frank.framework.web.filter.SecurityFilter</filter-class>
		<init-param>
			<param-name>loginURL</param-name>
			<param-value>/login</param-value>
		</init-param>
		<init-param>
			<param-name>unfilteredURIs</param-name>
			<param-value>
				/resources/.*|/login|/index|/doLogin
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>securityFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>setCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
        <listener-class>net.frank.framework.web.listener.HttpSessionEventPublisher</listener-class>
    </listener>
	
	<listener>
		<listener-class>net.frank.framework.web.spring.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>webcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>webcontroller</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<session-config>
	    <session-timeout>30</session-timeout>
	</session-config>
	
	<mime-mapping>
		<extension>svg</extension>
		<mime-type>image/svg</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>json</extension>
		<mime-type>application/json</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>ico</extension>
		<mime-type>image/x-icon</mime-type>
	</mime-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>